<div class="mt-4 px-5 container-fluid">
    <h1 class="mb-5">Subject: <%= @subject.name -%></h1>

    <div class='d-flex justify-content-between align-items-center'>
        <h3> Books: </h3>
        <%= link_to 'Add Book' , books_new_path, class: " btn btn-primary text-decoration-none" %>
    </div>

    <div class='d-flex gap-5 mb-5 flex-wrap mt-3'>
        <% @subject.books.each do |book|%>

            <div class="card" style="width: 15rem;">
                <img src="<%= book.url%>" style="height:350px; object-fit:cover;" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= link_to book.title, {action: "show", id: book.id}, class: "text-decoration-none"%>
                    </h5>
                    <p class="card-text">
                        <%= book.description%>
                    </p>
                    <div class="d-flex gap-2 justify-content-between mt-2 px-1">
                        <%= link_to 'Edit' , {action: 'edit', id: book.id}, class: "btn btn-primary" %>
                        <%= link_to 'Delete' , {action: 'delete', id: book.id}, class: "btn btn-danger text-decoration-none" %>
                    </div>
                </div>
            </div>

        <% end %>
    </div>
</div>