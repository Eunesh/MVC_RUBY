<div class="mt-3 px-5 container-fluid">

    <div class='d-flex gap-5'>
        <div>
            <h2 class="mb-3">Name: <%= @book.title  %></h2>
            <p class="mb-3"><strong>Price:</strong> <%= @book.price%></p>
            <p class="mb-3"><strong>Subject:</strong> <%= link_to @book.subject.name, "http://localhost:3000/books/show_subjects?id=#{subject.id}", class: "text-decoration-none"%></p>
            <p class="mb-3"><strong>Description:</strong> <br/> <%= @book.description%></p>
        </div>

        <div>
            <img src="<%= @book.url%>" style="height:350px; object-fit:cover;">
            <div class="d-flex gap-2 justify-content-between mt-2 px-1">
                <%= link_to 'Edit' , {action: 'edit', id: @book.id}, class: "btn btn-primary" %>
                <%= link_to 'Delete' , {action: 'delete', id: @book.id}, class: "btn btn-danger text-decoration-none" %>
            </div>
        </div>
    </div>

    <p class="mt-5">
        Go Back:
         <%= link_to 'to books list', books_list_path %>
    </p>
</div>
